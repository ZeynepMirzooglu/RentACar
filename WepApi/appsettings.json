{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Core.Application.Pipelines.Caching": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "RentACar": "Server=(localdb)\\mssqllocaldb; Database=RentACarCourseDb; Trusted_Connection=true"
  },
  "CacheSettings": {
    "SlidingExpiration": 2
  },
  "SeriLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/logs/"
    },
    "MsSqlConfiguration": {
      "AutoCreateSqlTable": true,
      "ConnectionString": "Server=(localdb)\\mssqllocaldb; Database=RentACarCourseDb; Trusted_Connection=true",
      "TableName": "Logs"
    }
  },
  "AllowedHosts": "*"
}
